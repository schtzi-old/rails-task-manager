<h1>Tasks#index</h1>

<ul>

  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fa-solid fa-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create new task', new_task_path, {class: "btn btn-primary" } %>
